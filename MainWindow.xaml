<Window x:Class="RobotPainting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotPainting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Clear" Content="Clear" Width="150px" Click="Clear_Click"></Button>
            <Button Content="Test" Click="Button_Click"></Button>
        </StackPanel>

        <Canvas x:Name="PaintingZone">
            <Line
                X1="10" Y1="10"
                X2="50" Y2="50"
                Stroke="Black"
                StrokeThickness="4" />

            <Image Name="Robot" Height="65" Width="59" Source="/robot.png"/>
        </Canvas>
        
    </StackPanel>
</Window>
